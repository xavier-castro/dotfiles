#!/usr/bin/env bash

# Helper to add tap only if not already tapped
brew_tap() {
	if brew tap | grep -q "^$1$"; then
		echo "✓ $1 already tapped, skipping"
	else
		echo "Tapping $1..."
		brew tap "$1"
	fi
}

# Helper to install font cask only if not already installed
font_install() {
	if brew list --cask "$1" &>/dev/null; then
		echo "✓ $1 already installed, skipping"
	else
		echo "Installing $1..."
		brew install --cask "$1"
	fi
}

# Install programming fonts
brew_tap homebrew/cask-fonts

# Popular programming fonts
font_install font-fira-code
font_install font-jetbrains-mono
font_install font-hack
font_install font-source-code-pro
font_install font-cascadia-code
