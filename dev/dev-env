#!/usr/bin/env bash
dry_run="0"

if [ -z "$XDG_CONFIG_HOME" ]; then
  echo "no xdg config home"
  echo "using ~/.config"
  XDG_CONFIG_HOME=$HOME/.config
fi

# Auto-detect dotfiles root from script location if DEV_ENV not set
if [ -z "$DEV_ENV" ]; then
  SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
  DEV_ENV="$(dirname "$SCRIPT_DIR")"
  echo "Auto-detected DEV_ENV: $DEV_ENV"
fi

if [[ $1 == "--dry" ]]; then
  dry_run="1"
fi

log() {
  if [[ $dry_run == "1" ]]; then
    echo "[DRY_RUN]: $1"
  else
    echo "$1"
  fi
}

log "env: $DEV_ENV"

update_files() {
  if [ ! -d "$1" ]; then
    log "skipping $1 (directory does not exist)"
    return
  fi
  log "copying over files from: $1"
  pushd $1 &>/dev/null
  (
    configs=$(find . -mindepth 1 -maxdepth 1 -type d)
    for c in $configs; do
      directory=${2%/}/${c#./}
      log "    removing: rm -rf $directory"

      if [[ $dry_run == "0" ]]; then
        rm -rf $directory
      fi

      log "    copying env: cp $c $2"
      if [[ $dry_run == "0" ]]; then
        cp -r ./$c $2
      fi
    done

  )
  popd &>/dev/null
}

copy() {
  if [ ! -f "$1" ]; then
    log "skipping $1 (file does not exist)"
    return
  fi
  log "removing: $2"
  if [[ $dry_run == "0" ]]; then
    rm -f $2
  fi
  log "copying: $1 to $2"
  if [[ $dry_run == "0" ]]; then
    cp $1 $2
  fi
}

update_files $DEV_ENV/dev/env/.config $XDG_CONFIG_HOME
update_files $DEV_ENV/dev/env/.local $HOME/.local

copy $DEV_ENV/dev/env/.zsh_profile $HOME/.zsh_profile
copy $DEV_ENV/dev/env/.zshrc $HOME/.zshrc
